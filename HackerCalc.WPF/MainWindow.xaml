<Window x:Class="HisRoyalRedness.com.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HisRoyalRedness.com"
        xmlns:common="clr-namespace:HisRoyalRedness.com;assembly=HackerCalc.Common"
        xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="HackerCalc" Height="450" Width="800">

    <Window.DataContext>
        <local:AppVM />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="2" />
            </Style>

            <Style TargetType="TextBlock" x:Key="AnswerField">
                <Setter Property="FontSize" Value="20" />
            </Style>

            <local:LiteralTokenToValueConverter x:Key="LiteralTokenToValue" />
            <local:LiteralTokenToTypeConverter x:Key="LiteralTokenToType" />
            <local:LiteralTokenToXamlConverter x:Key="LiteralTokenToXaml" />
            <local:HiddenIfEmptyConverter x:Key="HiddenIfEmpty" />
            <local:NullConverter x:Key="Null" />

            <DataTemplate DataType="{x:Type common:LimitedIntegerToken}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Style="{StaticResource AnswerField}"
                        Text="{Binding TypedValue}" />
                </Grid>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type common:UnlimitedIntegerToken}">
                <TextBlock Text="{Binding TypedValue}" />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type common:FloatToken}">
                <TextBlock Text="FloatToken" />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type common:DateToken}">
                <TextBlock Text="DateToken" />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type common:TimeToken}">
                <TextBlock Text="TimeToken" />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type common:TimespanToken}">
                <TextBlock Text="TimespanToken" />
            </DataTemplate>


        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock 
            Text="Equation: " />
        <TextBox 
            Text="{Binding Equation, UpdateSourceTrigger=PropertyChanged}" 
            Grid.Row="0" Grid.Column="1" />

        <RichTextBox
            FontFamily="Calibri"
            IsReadOnly="True"
            Grid.Row="1" Grid.Column="1">
            <FlowDocument FontSize="40">
                <Paragraph>
                    <Run 
                        Text="{Binding Evaluation, Mode=OneWay, Converter={StaticResource LiteralTokenToValue}}" />
                    <Run
                        FontSize="20"
                        BaselineAlignment="Subscript"
                        Foreground="#aaaaaa"
                        Text="{Binding Evaluation, Mode=OneWay, Converter={StaticResource LiteralTokenToType}}" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <TextBlock
            Text="Hex"
            Grid.Row="2" Grid.Column="0" />        
        <local:NumberBase
            Token="{Binding Evaluation, Mode=OneWay}"
            Base="16"
            Grid.Row="2" Grid.Column="1" />

        <TextBlock
            Text="Dec"
            Grid.Row="3" Grid.Column="0" />
        <local:NumberBase
            Token="{Binding Evaluation, Mode=OneWay}"
            Base="10"
            Grid.Row="3" Grid.Column="1" />

        <TextBlock
            Text="Oct"
            Grid.Row="4" Grid.Column="0" />
        <local:NumberBase
            Token="{Binding Evaluation, Mode=OneWay}"
            Base="8"
            Grid.Row="4" Grid.Column="1" />

        <TextBlock
            Text="Bin"
            Grid.Row="5" Grid.Column="0" />
        <local:NumberBase
            Token="{Binding Evaluation, Mode=OneWay}"
            Base="2"
            Grid.Row="5" Grid.Column="1" />

        <TextBlock
            Text="Errors: " 
            Grid.Row="6"/>
        <TextBlock 
            Text="{Binding Errors}" 
            Grid.Row="6" Grid.Column="1" />


    </Grid>
</Window>
