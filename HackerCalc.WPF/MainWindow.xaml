<Window x:Class="HisRoyalRedness.com.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HisRoyalRedness.com"
        xmlns:common="clr-namespace:HisRoyalRedness.com;assembly=HackerCalc.Common"
        mc:Ignorable="d"
        Title="HackerCalc" Height="450" Width="800">

    <Window.DataContext>
        <local:AppVM />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common.xaml" />
                <ResourceDictionary Source="DataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="2" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Text="Equation: " />
        <TextBox
            Text="{Binding Equation, UpdateSourceTrigger=PropertyChanged}"
            Grid.Row="0" Grid.Column="1" />

        <RichTextBox
            Grid.Row="1" Grid.Column="1">
            <FlowDocument>
                <Paragraph FontSize="{StaticResource EvaluationRichTextFontSize}">
                    <Run
                        Text="{Binding Evaluation, Mode=OneWay, Converter={StaticResource LiteralTokenToValue}}" />
                    <Run
                        FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType={x:Type Paragraph}}, Converter={StaticResource RelativeSize}, ConverterParameter={StaticResource SubscriptRatio}}"
                        Foreground="{StaticResource SubscriptForeground}"
                        BaselineAlignment="Subscript"
                        Text="{Binding Evaluation, Mode=OneWay, Converter={StaticResource LiteralTokenToType}}" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <ContentControl
            Grid.Row="2" Grid.Column="1"
            Content="{Binding Evaluation}"
            />

        <TextBlock
            Text="Errors: "
            Grid.Row="3"/>
        <TextBlock
            Text="{Binding Errors}"
            Grid.Row="4" Grid.Column="1" />


    </Grid>
</Window>
